<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:id="@+id/nota"
            android:layout_width="364dp"
            android:layout_height="101dp"
            android:text="Name"
            android:gravity="center"
            android:textSize="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.489" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.169"/>
    <Button
            android:id="@+id/button_rec"
            android:text="Verifica Nota"
            android:layout_width="231dp"
            android:layout_height="97dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/nota"
            app:layout_constraintVertical_bias="0.731"/>
    <TextView
            android:text="TextView"
            android:layout_width="205dp"
            android:layout_height="41dp"
            android:id="@+id/trebuie"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/nota" app:layout_constraintBottom_toTopOf="@+id/curent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="205dp"
            android:layout_height="41dp"
            android:id="@+id/curent"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/trebuie"
            app:layout_constraintBottom_toTopOf="@+id/button_rec" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>